import javax.swing.JOptionPane;

public class Dice {
  
  private int numberofdice;
  static int maximumValue;
  static int numofdice;
  static int totalRolls=0;
  
  public void setRollDice(int numofdice)
  {
  	numberofdice = numofdice;
  }

  public int getRollDice()
  {
  	return numberofdice;
  }
  
  public void displayNumofDice()
  {
  	JOptionPane.showMessageDialog(null, "You choose to roll " + getRollDice() + " of dice");
  }
  
  public static int roll_1_dice()
  {
  	int me;
  	me=4;
  	int dice;
  	dice = 1+(int)(Math.random()*6);
  	return dice + me;
  }
  
  public void RollDice(int playerNumofDice, int maxValue)
  {
  	numofdice = playerNumofDice;
  	maximumValue = maxValue;
  }
  
  public int getNumberofDice()
  {
  return numofdice;
  }
  
  public int getMaxValueOfDice()
  {
  return maximumValue;	
  }
  
  public int RollCount()
  {
  	totalRolls= getNumberofDice() + totalRolls;
  	return totalRolls;
  }
}
