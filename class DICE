import javax.swing.JOptionPane;

public class Dice {
  

  static int maximumValue;
  static int numofdice;
  static int totalRolls;
  private int counter;
  String theNumbers = "";

  public static int roll_1_dice()
  {
  	int dice;
  	dice = 1+(int)(Math.random()*6);
  	return dice;
  }
  
  public void displayNumofDice()
  {
  	JOptionPane.showMessageDialog(null, "You choose to roll " + numofdice + " of dice");
  }
  
  public void RollDice(int playerNumofDice, int maxValue)
  {
  	numofdice = playerNumofDice;
  	maximumValue = maxValue;
  }

  public void RollDices()
  {
  	for ( int counter = 1; counter <= numofdice; counter++ )
  	{
  		String displayDiceNumbers;
  		int dice;
  		dice = 1+(int)(Math.random()*maximumValue);			
  		displayDiceNumbers = String.valueOf(dice);
  		if ( counter % 5 == 0 )
  		displayDiceNumbers = (displayDiceNumbers + "\n");	
  		JOptionPane.showMessageDialog(null, "You got " + displayDiceNumbers);
  	}

  }
  	
  public static int RollCount()
  {
  	return totalRolls;
  }
  
}
