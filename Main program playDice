import javax.swing.JOptionPane;

public class playDice {

  public static void main(String[] args) {
  	
  	Dice letsroll = new Dice();
  	String answer;
  	
  	do{
  	
  	letsroll.displayNumofDice();
  	
  	JOptionPane.showMessageDialog(null, "You rolled a " + Dice.roll_1_dice() + " on a single dice");
  			
  	letsroll.RollDice((Integer.parseInt(JOptionPane.showInputDialog("How many dice would you like to roll?"))), (Integer.parseInt(JOptionPane.showInputDialog("and their maximum value?"))));
  	
  	letsroll.RollDices();
  	
  	JOptionPane.showMessageDialog(null,"And rolled the dice " + letsroll.RollCount() + " times");

  	answer = JOptionPane.showInputDialog("Would you like to play again? y/n");
  	
  }while (answer.equalsIgnoreCase("y"));;
  }

}
