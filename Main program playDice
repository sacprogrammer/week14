import javax.swing.JOptionPane;

public class playDice {

  public static void main(String[] args) {
  	
  	Dice letsroll = new Dice();
  	
  	int playerChoice = Integer.parseInt(JOptionPane.showInputDialog("How many dice would you like to roll?"));
  	
  	letsroll.setRollDice(playerChoice);
  	
  	letsroll.displayNumofDice();
  	
  	JOptionPane.showMessageDialog(null, "You rolled a " + Dice.roll_1_dice() + " on a single dice");
  	
  }

}
